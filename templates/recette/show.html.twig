{% extends 'base.html.twig' %}

{% block title %}{{ recette.title }}{% endblock %}

{% block body %}
  <div class="m-lg-2">&nbsp;</div>
  <div class="container">
    <div class="row">
      <div class="col-lg-1">&nbsp;</div>
      <div class="col-lg-10">
        <div class="row bg-light rounded">
          <div class="col-lg-7">
            <h1 class="text-center p-lg-5">{{ recette.title }}</h1>
            <img src="{{ recette.cover }}" class="img-thumbnail img-fluid" alt="Image principale">
            <div class="col-lg-6">
              <div class="row align-items-lg-start">
                <div class="col-6 mt-lg-3">
                  <img src="{{ recette.author.picture }}" alt="Avatar de {{ recette.author.surnom }}"
                       class="rounded-circle">
                </div>
                <div class="col-6 mt-lg-3">
                  <p class="badge badge-dark">{{ recette.author.recettes | length }}
                    {% if recette.author.recettes | length >1 %}
                      contributions
                    {% else %}
                      contribution
                    {% endif %}
                  </p>
                  <br>
                </div>
              </div>
                  <div class="col-lg-6 text-center">
                    <p class="text-center"><strong>{{ recette.author.surnom }}</strong></p>
                  </div>
            </div>
          </div>
          <div class="col-lg-5 p-5">
            <table class="table">
              <thead>
              <tr>
                <th scope="col">ingrédients</th>
              </tr>
              </thead>
              <tbody>
              {% for ingredient in ingredients %}
                <tr>
                  <td>{{ ingredient.title }}</td>
                </tr>
              {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
        <br>
        <div class="row bginfos p-1 rounded">
          {% if recette.categorie is not null %}
            <div class="col-3 text-white text-center">{{ recette.categorie.title }}</div>
          {% endif %}
          <div class="col-3 text-white text-center">Difficulté <span
                    class="infos font-weight-bold">{{ recette.difficulte }}</span></div>
          <div class="col-3 text-white text-center">Durée <span class="infos font-weight-bold">{{ recette.id }}</span>
            minutes
          </div>
          <div class="col-3 text-white text-center"><span class="infos">{{ recette.nombre }}</span> personnes</div>
        </div>
        <br>
        <div class="row bg-light rounded p-lg-5">
          <ol>
            {% for etape in etapes %}
              <li class="m-lg-3">{{ etape.description }}</li>
            {% endfor %}
          </ol>
        </div>
      </div>
      <div class="col-lg-4">
      </div>
    </div>
  </div>


  <a href="{{ path('recette_index') }}">back to list</a>

  <a href="{{ path('recette_edit', {'slug': recette.slug}) }}">edit</a>

  {{ include('recette/_delete_form.html.twig') }}
{% endblock %}
