<form method="post" action="{{ path('recette_delete', {'slug': recette.slug}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recette.slug) }}">
    <button class="btn">Delete</button>
</form>
