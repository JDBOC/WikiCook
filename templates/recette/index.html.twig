{% extends 'base.html.twig' %}

{% block title %}Recette index{% endblock %}

{% block body %}



  <div class="container-fluid">

    <h2 class="text-center titre text-dark mt-md-5">Liste des recettes</h2>
    <div class="row">
      <div class="col-md-2 mt-lg-3">
        {% include 'partiels/_search.html.twig' with {form: form} only %}
      </div>

      <div class="col-md-9">
        <div class="grid">
          <div class="row overflow-auto">
            {% for recette in recettes %}

              {% include 'partiels/_card.html.twig' with {recette: recette} %}

            {% endfor %}
          </div>


        </div>
    </div>
    </div>

  </div>
  <div><a id="cRetour" class="cInvisible" href="#haut"><i class="far fa-arrow-alt-circle-up fa-2x"></i></a></div>


  <div class="d-flex justify-content-center">
    <ul class="pagination">
      <li class="page-item {% if page == 1 %} disabled {% endif %}">
        <a class="page-link" href="{{ path('recette_index', {'page': page - 1}) }}">&laquo;</a>
      </li>
      {% for i in 1..pages %}
        <li class="page-item {% if page == i %} active {% endif %}">
          <a class="page-link" href="{{ path('recette_index', {'page': i}) }}">{{ i }}</a>
        </li>
      {% endfor %}
      <li class="page-item {% if page == pages %} disabled {% endif %}">
        <a class="page-link" href="{{ path('recette_index', {'page': page + 1}) }}">&raquo;</a>
      </li>
    </ul>
  </div>



{% endblock %}

{% block javascripts %}

{% endblock %}
