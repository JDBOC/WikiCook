{% extends 'base.html.twig' %}

{% block title %}Page de {{ user.surnom }}{% endblock %}

{% block body %}
<div class="container">
  <div class="row mt-3 align-items-center">
    <div class="col-3 text-center">
      <img src="{{ user.picture }}" alt="Avatar de {{ user.surnom }}" class="rounded-circle mb-3">
      <br>
      <span class="badge badge-dark">{{ user.recettes | length }} contributions</span>
    </div>
    <div class="col-9">
      <h2 class="text-center">{{ user.surnom }}</h2>
    </div>
  </div>

</div>
{% endblock %}
