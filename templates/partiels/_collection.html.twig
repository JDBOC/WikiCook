<!--PARTIE FORM INGREDIENT-->

{% block _recette_ingredient_widget %}
  <p>
    Ajoutez un ingrédient
  </p>
  <div class="form-group">
    {{ form_widget(form) }}

    <input type="hidden" id="widget-counter" value="0">

    <button type="button" id="add-image" class="btn btn-outline-primary">Ajouter </button>
  </div>
{% endblock %}


{% block _recette_ingredient_entry_row %}
  {{ form_widget(form) }}

{% endblock %}


{% block _recette_ingredient_entry_widget %}
  <div class="form-group" id="block_{{ id }}">
    <div class="row">
      <div class="col-lg-3">


            {{ form_widget(form.title) }}




        </div>

      <div class="col-lg-3">
        <button type="button" data-action="delete" data-target="#block_{{ id }}" class="btn btn-danger">X</button>
      </div>
  </div>
    </div>

{% endblock %}

<!--PARTIE FORM ETAPE-->

{% block _recette_etape_widget %}
  <p>
    Ajoutez une étape
  </p>
  <div class="form-group">
    {{ form_widget(form) }}

    <input type="hidden" id="widgets-counter" value="0">

    <button type="button" id="add-etape" class="btn btn-outline-dark justify-content-lg-end">Ajouter </button>
  </div>
{% endblock _recette_etape_widget %}


{% block _recette_etape_entry_row %}
  {{ form_widget(form) }}

{% endblock %}


{% block _recette_etape_entry_widget %}
  <div class="form-group" id="blockEtape_{{ id }}">
    <div class="row">
      <div class="col-lg-10">
        <div class="row">

            {{ form_widget(form.description) }}
            {{ form_errors(form.description) }}

        </div>

      </div>
      <div class="col-lg-2">
        <button type="button" data-action="delete" data-target="#blockEtape_{{ id }}" class="btn btn-danger">X</button>
      </div>
    </div>
  </div>
{% endblock %}

